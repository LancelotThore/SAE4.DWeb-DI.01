{% extends 'base.html.twig' %}

{% block title %}Se connecter!{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            background-color: #f7f7f7;
            font-family: 'Arial', sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        .container {
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            max-width: 25rem;
            padding: 2.5rem;
            background: white;
            border-radius: 0.5rem;
            box-shadow: 0 0.25rem 1.25rem rgba(0, 0, 0, 0.1);
        }

        h1 {
            font-size: 1.5rem;
            margin-bottom: 1.25rem;
            color: #333;
        }

        .form-control {
            border-radius: 0.25rem;
            border: 1px solid #ccc;
            padding: 0.625rem;
            width: 100%;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 0.25rem;
            padding: 0.625rem;
            width: 100%;
            font-size: 1rem;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .label {
            display: block;
            width: 7rem;
        }

        .input {
            display: flex;
            align-items: center;
            width: 100%;
            margin-bottom: 0.9375rem;
        }

        .alert {
            margin-bottom: 1.25rem;
            padding: 0.625rem;
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
            border-radius: 0.25rem;
        }

        .footer {
            text-align: center;
            margin-top: 1.25rem;/
            font-size: 0.75rem;/
            color: #666;
        }

        .login {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin-top: 1rem;
        }

        .link {
            color: #0056b3;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <a href="localhost:5173">Retourner sur le site</a>
        <a href="{{ path('app_admin')}}">Admin</a>
    </div>
{% endblock %}